<h1>プロフィール修正</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :birthday, "生年月日" %>
      <%= f.date_select :birthday, { start_year: 1988, end_year: 2000 }, { class: 'form-control datetime_select'} %>

      <%= f.label :gender, "性別" %>
      <%= f.select :gender, User.genders_i18n.keys.map {|k| [User.genders_i18n[k], k]}, {prompt: ""}, { class: 'form-control'}  %>

      <%= f.label :school, "学校名" %>
      <%= f.text_field :school, class: 'form-control' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード(6文字以上必要です。)" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワードをもう一度入力してください。" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "修正", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
