<h1>プロフィール作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :birthday, "生年月日" %>
      <%= f.date_select :birthday, start_year: 1988, end_year: 2000, class: 'form-control form_date_select' %>

      <%= f.label :gender, "性別" %>
      <%= f.select :gender, User.genders.keys, class: 'form-control' %>

      <%= f.label :school, "学校名" %>
      <%= f.text_field :school, class: 'form-control' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>



      <%= f.submit "プロフィール作成", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
